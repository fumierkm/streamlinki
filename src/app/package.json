{
	"name": "<%= package.name %>",
	"version": "<%= package.version %>",
	"product_string": "<%= main['display-name'] %>",

	"main": "index.html",

	"window": {
		"title": "<%= main['display-name'] %>",
		"frame": false,
		"resizable": true,
		"show": false,
		"position": "center",
		"width": 960,
		"height": 540,
		"min_width": 960,
		"min_height": 540,
		"icon": "~assets/icons/icon-256.png",
		"show_in_taskbar": false
	},

	"chromium-args": "--disable-devtools --enable-features=NativeNotifications --disable-smooth-scrolling"
}
