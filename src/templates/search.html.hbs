<h2>{{filterlabel}} search results: <span>{{query}}</span></h2>
{{#if noresults}}
<section class="noresults">Your query didn't match anything...</section>
{{/if}}
{{#if games.length}}
<section class="search-games">
{{#if notFiltered}}<h3>Games</h3>{{/if}}
<ul class="content-list">
{{#each game in games}}
{{game-item game=game}}
{{/each}}
</ul>
</section>
{{/if}}
{{#if streams.length}}
<section class="search-streams">
{{#if notFiltered}}<h3>Streams</h3>{{/if}}
<ul class="content-list">
{{#each stream in streams}}
{{stream-item stream=stream showGame=true}}
{{/each}}
</ul>
{{infinite-scroll}}
</section>
{{/if}}