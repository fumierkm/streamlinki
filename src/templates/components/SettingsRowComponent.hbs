<div>
	<p><i class="fa {{icon}}"></i> {{#if toggle}}{{check-box title checked=enabled}}{{else}}{{title}}{{/if}}</p>
	<p>{{{description}}}</p>
	{{#if notes}}
		<p class="section"><i class="fa fa-exclamation-circle"></i>Notes</p>
		<p>{{notes}}</p>
	{{/if}}
	{{#if defaultValue}}
		<p class="section"><i class="fa fa-chevron-circle-right"></i>Default</p>
		<p>{{defaultValue}}</p>
	{{/if}}
	{{#if _substitutions.length}}
		<p class="section"><span class="cursor-help" title="The content of each variable will be escaped. If used outside of quoted strings, every character will be escaped."><i class="fa fa-info-circle"></i>Available variables</span></p>
		<ul class="list-unstyled substitutions-list">
			{{#each _substitutions as |substitution|}}
				<li class="hoverable cursor-help" title="{{substitution.description}}">{{substitution.variable}}</li>
			{{/each}}
		</ul>
	{{/if}}
	{{#if requires}}
		<p class="section"><i class="fa fa-exclamation-circle"></i>Requires</p>
		<p>{{requires}}</p>
	{{/if}}
	{{#if example}}
		<p class="section"><i class="fa fa-question-circle"></i>Example</p>
		<p class="text-overflow"><span class="hoverable">{{example}}</span></p>
	{{/if}}
	{{#if documentation}}
		<p class="section">
			{{#unless (is-null documentationUrl)}}
				{{documentation-link item=documentation baseUrl=documentationUrl classNames=(if documentationUrl "hoverable" "")}}
			{{else}}
				{{documentation-link item=documentation classNames="hoverable"}}
			{{/unless}}
		</p>
	{{/if}}
</div>
<div>{{yield}}</div>