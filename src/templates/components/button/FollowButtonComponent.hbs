{{form-button
	classNames="btn-danger confirm-button"
	icon="fa-heart-o"
	iconanim=true
	title=(concat "[Ctrl+F] Unfollow " name)
	action=(unless isLocked
		(if isExpanded (action "unfollow"))
	)
}}
{{form-button
	classNames="main-button"
	class=(if isLoading
		"btn-info"
		(if isPromptVisible
			"btn-success"
			(if isSuccessful "btn-success" "btn-danger")
		)
	)
	isLoading=(if isExpanded false isLoading)
	icon=(if isPromptVisible
		"fa-arrow-left"
		(if isSuccessful "fa-heart" "fa-heart-o")
	)
	iconanim=(bool-not isExpanded)
	title=(if isLoading
		""
		(if isPromptVisible
			(concat "[F] Keep following " name)
			(concat "[F] " (if isSuccessful "Unfollow " "Follow ") name)
		)
	)
	action=(unless isLocked
		(action (if isSuccessful
			(if isExpanded "collapse" "expand")
			"follow"
		))
	)
}}