<main class="content content-games">
<header>
<h2>Top Games</h2>
{{#if metadata.total}}<div class="total">({{metadata.total}})</div>{{/if}}
{{settings-bar btnHomepage=true}}
</header>
{{#if model.length}}
<ul class="content-list">
{{#each model as |game index|}}
{{game-item content=game isNewItem=(is-gte index initialFetchSize)}}
{{/each}}
</ul>
{{infinite-scroll}}
{{else}}
<p>The top games list could not be loaded!</p>
{{/if}}
</main>