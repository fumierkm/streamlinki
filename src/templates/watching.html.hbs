{{#if content.length}}
<h2>You're watching</h2>
<ul class="list-unstyled">
{{#each watching in arrangedContent}}
<li class="watching-stream">
<img class="left" {{bind-attr src=watching.stream.preview.large}}>
<section class="right">
<h3>{{watching.stream.channel.display_name}}</h3>
<div class="game">{{#link-to "games.game" watching.stream.game}}{{watching.stream.game}}{{/link-to}}</div>
{{embedded-links class="info" text=watching.stream.channel.status}}
<div class="stats">
<div><i class="fa fa-clock-o"></i> {{hours-from-now watching.stream.channel.updated_at}}</div>
<div><i class="fa fa-group"></i> {{format-viewers watching.stream.viewers}}</div>
</div>
<footer class="buttons">
<button type="button" class="btn btn-with-icon btn-danger" {{action "close" watching}}><i class="fa fa-times"></i>Close</button>
<button type="button" class="btn btn-with-icon btn-success" {{action "chat" watching}}><i class="fa fa-comments"></i>Chat</button>
{{view "select" class="modalqualityselect" value=watching.quality content=controller.qualities optionValuePath="content.id" optionLabelPath="content.label" change=watching.changeQuality}}
</footer>
</section>
</li>
{{/each}}
</ul>
{{else}}
<h2>All streams have been closed</h2>
<p>What to do next?</p>
<ul class="fa-ul list-empty">
<li>{{#link-to "featured"}}<i class="fa fa-li fa-caret-right"></i>Watch currently featured streams{{/link-to}}</li>
</ul>
{{/if}}