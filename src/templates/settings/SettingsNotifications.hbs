<fieldset>
{{#settings-row
	"Notifications"
	"When favorites start streaming."
	icon="fa-bullhorn"
}}
	{{check-box "Enable desktop notifications" checked=model.notification.enabled}}
{{/settings-row}}

{{#if model.notification.enabled}}
	{{#settings-row
		"Notification type"
		"Choose the kind of notification"
		icon="fa-cog"
	}}
		{{#form-button action=(action "testNotification") classNames="btn-test-notification" icon="fa-rocket" iconanim=true}}Test notification{{/form-button}}
		{{#radio-btns
			name="notificationproviders"
			value=model.notification.provider
			content=providers
			as |radiobtn label|
		}}
			<div class="notification-provider-item">
				{{component radiobtn label.name}}
				<p class="description">{{#if label.notes}}<i class="fa fa-question-circle" title={{label.notes}}></i> {{/if}}{{label.description}}</p>
			</div>
		{{/radio-btns}}
	{{/settings-row}}

	{{#settings-row
		"Channel filter"
		"Notifications can be turned on/off individually in a channel's settings menu."
		icon="fa-eyedropper"
	}}
		{{#radio-btns
			name="notificationfilter"
			value=model.notification.filter
			content=SettingsNotification.filter
			as |radiobtn label|
		}}
			<div>{{component radiobtn label}}</div>
		{{/radio-btns}}
	{{/settings-row}}

	{{#settings-row
		"Grouping"
		"Merge multiple notifications."
		icon="fa-folder-open-o"
	}}
		{{check-box "Only show one notification at a time" checked=model.notification.grouping}}
	{{/settings-row}}

	{{#settings-row
		"Notification click"
		"Preferred click action."
		icon="fa-hand-pointer-o"
	}}
		{{drop-down value=model.notification.click content=SettingsNotification.click class="notifications"}}
	{{/settings-row}}

	{{#if model.notification.grouping}}
		{{#settings-row
			"Group click"
			"Preferred group click action."
			icon="fa-hand-pointer-o"
		}}
			{{drop-down value=model.notification.click_group content=SettingsNotification.click_group class="notifications"}}
		{{/settings-row}}
	{{/if}}

	{{#settings-row
		"Restore GUI"
		"Restore from tray or minimized state when performing a notification click action."
		icon="fa-window-restore"
	}}
		{{check-box "Restore when clicking a notification" checked=model.notification.click_restore}}
	{{/settings-row}}
{{/if}}
</fieldset>