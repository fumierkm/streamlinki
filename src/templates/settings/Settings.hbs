<main class="content content-settings {{if isAnimated 'animated'}}">
<h2>Settings</h2>
<header>
<ul>
{{#each-in (hash
	main="Main"
	streams="Streams"
	livestreamer="Livestreamer"
	player="Player"
	chat="Chat"
	gui="GUI"
	lists="Lists"
	languages="Languages"
	notifications="Notifications"
) as |subroute name|}}
	{{#link-to (concat "settings." subroute) tagName="li" classNames="btn" activeClass="btn-primary" inactiveClass="btn-neutral"}}{{name}}{{/link-to}}
{{/each-in}}
</ul>
</header>
{{outlet}}
<fieldset class="submit">
<div>
{{#form-button action="apply"   class="btn-success" icon="fa-check"   iconanim=true}}Apply{{/form-button}}
{{#form-button action="discard" class="btn-danger"  icon="fa-trash-o" iconanim=true}}Discard{{/form-button}}
</div>
</fieldset>
</main>