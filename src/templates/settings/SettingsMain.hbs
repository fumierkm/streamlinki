<fieldset>
{{#settings-row
	"Settings and features"
	"Enable hidden settings and features.<br>Does not only apply to the settings menu."
	icon="fa-unlock-alt"
}}
	{{check-box "Enable advanced settings and features" checked=model.advanced}}
{{/settings-row}}
</fieldset>
<fieldset>
{{#settings-row
	"Theme"
	"Select a GUI color theme."
	icon="fa-paint-brush"
}}
	{{drop-down value=model.gui_theme content=themes}}
{{/settings-row}}

{{#settings-row
	"Scrolling"
	"Enable or disable smooth scrolling."
	icon="fa-arrows-alt"
}}
	{{check-box "Enable smooth scrolling" checked=model.gui_smoothscroll}}
{{/settings-row}}

{{#settings-row
	"Home page"
	"Menu to load first or when clicking the logo."
	icon="fa-home"
}}
	<em class="small">See the menu bar in the top right corner of each page.<br>Click the home button to make it the new home page.</em>
{{/settings-row}}
</fieldset>