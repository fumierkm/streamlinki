{{#if modalBtnsDefault}}
{{#form-button action="shutdown" class="btn-danger"  icon="fa-times"}}Close{{/form-button}}
{{/if}}
{{#if modalBtnsDownload}}
{{#form-button action="close"    class="btn-danger"  icon="fa-times"                 }}Close{{/form-button}}
{{#form-button action="download" class="btn-success" icon="fa-download" iconanim=true}}Download{{/form-button}}
{{/if}}
{{#if modalBtnsRunning}}
<div>
{{form-button action="close"    class="btn-primary" icon="fa-arrow-left" title="Continue"}}
{{form-button action="shutdown" class="btn-danger"  icon="fa-times"      title="Close stream"}}
</div>
<div>
{{form-button action="chat"  class="btn-success" icon="fa-comments"  iconanim=true title="Open chat"}}
{{form-button action="share" class="btn-info"    icon="fa-share-alt" iconanim=true title="Copy stream url to clipboard"}}
</div>
{{view "select" value=current.quality content=settings.constructor.qualities class="modalqualityselect" optionValuePath="content.id" optionLabelPath="content.label"}}
{{/if}}