<main class="content content-user content-user-followed-channels">
<header>
<h2>Followed channels</h2>
{{headline-totals total=metadata.total}}
{{#quick-bar}}
<div class="multibtn sort-method">
{{form-button
  action="sortMethod"
  actionParam="created_at"
  class=(if (is-equal sortby "created_at") "active")
  icon="fa-calendar"
  title="Sort by date followed"}}
{{form-button
  action="sortMethod"
  actionParam="last_broadcast"
  class=(if (is-equal sortby "last_broadcast") "active")
  icon="fa-video-camera"
  title="Sort by last broadcast"}}
{{form-button
  action="sortMethod"
  actionParam="login"
  class=(if (is-equal sortby "login") "active")
  icon="fa-sign-in"
  title="Sort by last login"}}
</div>
<div class="multibtn sort-order">
{{form-button
  action="sortOrder"
  actionParam="desc"
  class=(if (is-equal direction "desc") "active")
  icon="fa-long-arrow-down"
  title="Sort in descending order"}}
{{form-button
  action="sortOrder"
  actionParam="asc"
  class=(if (is-equal direction "asc") "active")
  icon="fa-long-arrow-up"
  title="Sort in ascending order"}}
</div>
{{quick-bar-homepage}}
{{/quick-bar}}
</header>
{{#content-list content=model as |item isNewItem isDuplicateItem|}}
{{channel-item content=item isNewItem=isNewItem isDuplicateItem=isDuplicateItem}}
{{else}}
<p>The returned list of followed channels is empty.</p>
<ul class="fa-ul list-empty">
<li>{{#link-to "channels"}}<i class="fa fa-li fa-caret-right"></i>Watch top channels{{/link-to}}</li>
</ul>
{{/content-list}}
</main>