<main class="content content-user content-user-followed-streams">
<header>
<h2>Followed streams</h2>
{{settings-bar targetObject=this btnHomepage=true}}
</header>
{{#if content.length}}
<ul class="content-list">
{{#each model as |stream index|}}
{{stream-item content=stream isNewItem=(is-gte index initialFetchSize) showGame=true faded=false}}
{{/each}}
</ul>
{{infinite-scroll}}
{{else}}
<div class="content-empty">
<p>None of your followed channels is online right now.</p>
<ul class="fa-ul list-empty">
<li>{{#link-to "featured"}}<i class="fa fa-li fa-caret-right"></i>Watch currently featured streams{{/link-to}}</li>
</ul>
</div>
{{/if}}
</main>
