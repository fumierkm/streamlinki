<main class="wrapper vertical content content-featured {{if isAnimated 'animated'}}">
<header>
<h2>Featured Channels</h2>
{{settings-bar targetObject=this btnHomepage=true}}
</header>
{{#if featured.length}}
{{#each featured as |elem index|}}
{{#if (is-equal _index index)}}
<section class="stream-presentation">
<div class="image">
<div class="preview" {{action "openLivestreamer" elem.stream}}>
{{preview-image src=elem.stream.preview.large_nocache}}
</div>
</div>
<div class="info">
<h3 class="title">{{#if elem.stream.channel.has_language}}{{flag-icon type="channel" lang=elem.stream.channel.language}}{{/if}}{{#link-to "channel" elem.stream.channel.id}}{{elem.stream.channel.display_name}}{{/link-to}}</h3>
{{#if elem.stream.game}}<div class="game"><i class="fa fa-gamepad"></i>{{#link-to "games.game" elem.stream.game}}{{elem.stream.game}}{{/link-to}}</div>{{/if}}
{{stats-row stream=elem.stream}}
{{embedded-links class="status" text=elem.stream.channel.status}}
</div>
</section>
{{/if}}
{{/each}}
<ul class="channels">
{{#each featured as |elem index|}}
<li title="{{elem.stream.channel.id}}" class="{{if (is-equal _index index) 'active'}}" {{action "switchFeatured" index}}>
{{preview-image src=elem.image title=elem.stream.channel.id}}
</li>
{{/each}}
<i class="cursor fa fa-caret-down"></i>
<i class="cursor fa fa-caret-down cursor-hover"></i>
</ul>
{{else}}
<section class="error-message">The featured streams list could not be loaded!</section>
{{/if}}
<section class="globalstats">There are {{summary.viewers}} people watching {{summary.channels}} live streams right now!</section>
</main>